    <script>
        const alphabet = [
            {letter: 'A', word: 'Apple', image: 'üçé', 
             mouthTip: 'Open your mouth wide!',
             shortSound: 'ah (like in cat üê±, bat ü¶á, hat üé©)',
             longSound: 'ay (like the letter name - cake üéÇ, lake üèûÔ∏è, make)'},
            {letter: 'B', word: 'Banana', image: 'üçå', mouthTip: 'Press your lips together, then pop them open!'},
            {letter: 'C', word: 'Cat', image: 'üê±', mouthTip: 'Make a "k" sound with the back of your tongue!'},
            {letter: 'D', word: 'Dog', image: 'üêï', mouthTip: 'Touch your tongue to the roof of your mouth!'},
            {letter: 'E', word: 'Elephant', image: 'üêò', 
             mouthTip: 'Smile when you say it!',
             shortSound: 'eh (like in bed üõèÔ∏è, red üî¥, pen ‚úèÔ∏è)',
             longSound: 'ee (like the letter name - bee üêù, tree üå≥, see üëÄ)'},
            {letter: 'F', word: 'Fish', image: 'üêü', mouthTip: 'Bite your bottom lip gently and blow!'},
            {letter: 'G', word: 'Grapes', image: 'üçá', mouthTip: 'Make a gurgling sound in your throat!'},
            {letter: 'H', word: 'House', image: 'üè†', mouthTip: 'Breathe out like you\'re fogging a mirror!'},
            {letter: 'I', word: 'Ice cream', image: 'üç¶', 
             mouthTip: 'Your mouth changes for each sound!',
             shortSound: 'ih (like in sit ü™ë, fish üêü, with)',
             longSound: 'eye (like the letter name - kite ü™Å, bike üö≤, like üëç)'},
            {letter: 'J', word: 'Juice', image: 'üßÉ', mouthTip: 'Make a "j" sound like jumping!'},
            {letter: 'K', word: 'Kite', image: 'ü™Å', mouthTip: 'Make a clicking sound with the back of your tongue!'},
            {letter: 'L', word: 'Lion', image: 'ü¶Å', mouthTip: 'Touch your tongue tip to the roof of your mouth!'},
            {letter: 'M', word: 'Monkey', image: 'üêµ', mouthTip: 'Press your lips together and hum!'},
            {letter: 'N', word: 'Nose', image: 'üëÉ', mouthTip: 'Touch your tongue to the roof and hum through your nose!'},
            {letter: 'O', word: 'Orange', image: 'üçä', 
             mouthTip: 'Make your mouth round!',
             shortSound: 'ah (like in hot üî•, pot üç≤, stop üõë)',
             longSound: 'oh (like the letter name - boat ‚õµ, coat üß•, note üéµ)'},
            {letter: 'P', word: 'Pizza', image: 'üçï', mouthTip: 'Pop your lips like popping bubbles!'},
            {letter: 'Q', word: 'Queen', image: 'üë∏', mouthTip: 'Say "kw" quickly together!'},
            {letter: 'R', word: 'Rainbow', image: 'üåà', mouthTip: 'Make a growling sound like a tiger!'},
            {letter: 'S', word: 'Sun', image: '‚òÄÔ∏è', mouthTip: 'Make a snake sound "sss"!'},
            {letter: 'T', word: 'Tiger', image: 'üêØ', mouthTip: 'Tap your tongue on the roof of your mouth!'},
            {letter: 'U', word: 'Umbrella', image: '‚òÇÔ∏è', 
             mouthTip: 'Your lips change for each sound!',
             shortSound: 'uh (like in cup ‚òï, up ‚¨ÜÔ∏è, sun ‚òÄÔ∏è)',
             longSound: 'yoo (like the letter name - cute ü•∞, music üéµ, unicorn ü¶Ñ)'},
            {letter: 'V', word: 'Violin', image: 'üéª', mouthTip: 'Bite your bottom lip gently and buzz!'},
            {letter: 'W', word: 'Watermelon', image: 'üçâ', mouthTip: 'Make your lips round and say "wuh"!'},
            {letter: 'X', word: 'X-ray', image: 'ü©ª', mouthTip: 'Say "eks" - it\'s like k+s together!'},
            {letter: 'Y', word: 'Yo-yo', image: 'ü™Ä', mouthTip: 'Say "yuh" like in "yes"!'},
            {letter: 'Z', word: 'Zebra', image: 'ü¶ì', mouthTip: 'Make a buzzing bee sound "zzz"!'}
        ];

        const vowels = ['A', 'E', 'I', 'O', 'U'];
        let currentMode = 'explore';
        let currentCaseMode = 'both';
        let practiceCase = 'upper';
        let currentLetter = null;
        let isDrawing = false;

        function initializeAlphabet() {
            const grid = document.getElementById('alphabetGrid');
            grid.innerHTML = '';
            
            alphabet.forEach(item => {
                const card = document.createElement('div');
                card.className = 'letter-card';
                
                let letterDisplay = '';
                if (currentCaseMode === 'both') {
                    letterDisplay = `<div class="letter-both">${item.letter}${item.letter.toLowerCase()}</div>`;
                } else if (currentCaseMode === 'upper') {
                    letterDisplay = `<div class="letter">${item.letter}</div>`;
                } else {
                    letterDisplay = `<div class="letter">${item.letter.toLowerCase()}</div>`;
                }
                
                card.innerHTML = `
                    ${letterDisplay}
                    <div class="letter-word">${item.word}</div>
                `;
                card.onclick = () => selectLetter(item);
                grid.appendChild(card);
            });
        }

        function initializeVowels() {
            const grid = document.getElementById('vowelGrid');
            grid.innerHTML = '';
            
            alphabet.filter(item => vowels.includes(item.letter)).forEach(item => {
                const card = document.createElement('div');
                card.className = 'letter-card';
                card.innerHTML = `
                    <div class="letter-both">${item.letter}${item.letter.toLowerCase()} <span class="star">‚≠ê</span></div>
                    <div class="letter-word">${item.word}</div>
                `;
                card.onclick = () => selectVowel(item);
                grid.appendChild(card);
            });
        }

        function setCaseMode(mode) {
            currentCaseMode = mode;
            document.querySelectorAll('.case-btn').forEach(btn => btn.classList.remove('active'));
            event.currentTarget.classList.add('active');
            initializeAlphabet();
        }

        function setPracticeCase(caseType) {
            practiceCase = caseType;
            document.querySelectorAll('#practiceMode .case-btn').forEach(btn => btn.classList.remove('active'));
            event.currentTarget.classList.add('active');
            
            if (currentLetter) {
                const letter = practiceCase === 'upper' ? currentLetter.letter : currentLetter.letter.toLowerCase();
                document.getElementById('practiceLetterDisplay').textContent = letter;
                initializeCanvas();
            }
        }

        function selectLetter(item) {
            currentLetter = item;
            
            // Update active states
            document.querySelectorAll('.letter-card').forEach(card => {
                card.classList.remove('active');
            });
            event.currentTarget.classList.add('active');
            
            // Update display
            const display = document.getElementById('letterDisplay');
            const isVowel = vowels.includes(item.letter);
            
            let vowelInfo = '';
            if (isVowel) {
                vowelInfo = `
                    <div class="vowel-sounds">
                        <h3>This letter makes TWO sounds!</h3>
                        <div class="sound-example">
                            <span class="sound-type">Short ${item.letter}:</span> ${item.shortSound}
                        </div>
                        <div class="sound-example">
                            <span class="sound-type">Long ${item.letter}:</span> ${item.longSound}
                        </div>
                    </div>
                `;
            }
            
            display.innerHTML = `
                <div class="letter-comparison">
                    <div class="letter-showcase">
                        <div class="letter-label">Uppercase</div>
                        <div class="showcase-letter">${item.letter}</div>
                    </div>
                    <div class="letter-showcase">
                        <div class="letter-label">Lowercase</div>
                        <div class="showcase-letter">${item.letter.toLowerCase()}</div>
                    </div>
                </div>
                <div class="word-display">${item.letter} is for ${item.word}!</div>
                <div style="font-size: 5em; margin: 20px 0;">${item.image}</div>
                ${vowelInfo}
                <div class="mouth-position">
                    <strong>How to say it:</strong><br>
                    ${item.mouthTip}
                </div>
                <button class="practice-btn" onclick="practiceSound()">Practice Sound</button>
                <button class="practice-btn" onclick="setMode('practice'); setPracticeMode()">Practice Writing</button>
            `;
        }

        function selectVowel(item) {
            const display = document.getElementById('vowelDisplay');
            display.innerHTML = `
                <div class="letter-comparison">
                    <div class="letter-showcase">
                        <div class="letter-label">Uppercase</div>
                        <div class="showcase-letter">${item.letter} <span class="star">‚≠ê</span></div>
                    </div>
                    <div class="letter-showcase">
                        <div class="letter-label">Lowercase</div>
                        <div class="showcase-letter">${item.letter.toLowerCase()} <span class="star">‚≠ê</span></div>
                    </div>
                </div>
                <div class="word-display">${item.word}</div>
                <div style="font-size: 5em; margin: 20px 0;">${item.image}</div>
                <div class="vowel-sounds">
                    <h3>Two Different Sounds!</h3>
                    <div class="sound-example">
                        <span class="sound-type">Short ${item.letter}:</span> ${item.shortSound}
                        <br>
                        <em style="color: #718096;">This is the quick sound!</em>
                    </div>
                    <div class="sound-example">
                        <span class="sound-type">Long ${item.letter}:</span> ${item.longSound}
                        <br>
                        <em style="color: #718096;">This sounds like the letter's name!</em>
                    </div>
                </div>
                <div class="mouth-position">
                    <strong>How to make both sounds:</strong><br>
                    ${item.mouthTip}
                </div>
                <button class="practice-btn" onclick="practiceSound()">Practice Both Sounds</button>
            `;
        }

        function setMode(mode) {
            currentMode = mode;
            
            // Update button states
            document.querySelectorAll('.mode-btn').forEach(btn => {
                btn.classList.remove('active');
                if (btn.textContent.toLowerCase().includes(mode)) {
                    btn.classList.add('active');
                }
            });
            
            // Show/hide sections
            document.getElementById('exploreMode').classList.toggle('hidden', mode !== 'explore');
            document.getElementById('vowelsMode').classList.toggle('hidden', mode !== 'vowels');
            document.getElementById('practiceMode').classList.toggle('hidden', mode !== 'practice');
            
            if (mode === 'practice') {
                setPracticeMode();
            }
        }

        function setPracticeMode() {
            if (currentLetter) {
                const letter = practiceCase === 'upper' ? currentLetter.letter : currentLetter.letter.toLowerCase();
                document.getElementById('practiceLetterDisplay').textContent = letter;
            }
            initializeCanvas();
        }

        function initializeCanvas() {
            const canvas = document.getElementById('tracingCanvas');
            const ctx = canvas.getContext('2d');
            
            // Clear canvas
            ctx.clearRect(0, 0, canvas.width, canvas.height);
            
            // Draw guide letter
            ctx.font = '200px Arial';
            ctx.fillStyle = '#e0e0e0';
            ctx.textAlign = 'center';
            ctx.textBaseline = 'middle';
            ctx.fillText(document.getElementById('practiceLetterDisplay').textContent, 150, 150);
            
            // Set up drawing
            ctx.strokeStyle = '#5a67d8';
            ctx.lineWidth = 8;
            ctx.lineCap = 'round';
            
            // Remove old event listeners
            const newCanvas = canvas.cloneNode(true);
            canvas.parentNode.replaceChild(newCanvas, canvas);
            
            // Add new event listeners
            newCanvas.addEventListener('mousedown', startDrawing);
            newCanvas.addEventListener('mousemove', draw);
            newCanvas.addEventListener('mouseup', stopDrawing);
            newCanvas.addEventListener('mouseout', stopDrawing);
            
            // Touch events for tablets
            newCanvas.addEventListener('touchstart', handleTouch);
            newCanvas.addEventListener('touchmove', handleTouch);
            newCanvas.addEventListener('touchend', stopDrawing);
        }

        function startDrawing(e) {
            isDrawing = true;
            const canvas = document.getElementById('tracingCanvas');
            const ctx = canvas.getContext('2d');
            const rect = canvas.getBoundingClientRect();
            
            ctx.beginPath();
            ctx.moveTo(e.clientX - rect.left, e.clientY - rect.top);
        }

        function draw(e) {
            if (!isDrawing) return;
            
            const canvas = document.getElementById('tracingCanvas');
            const ctx = canvas.getContext('2d');
            const rect = canvas.getBoundingClientRect();
            
            ctx.lineTo(e.clientX - rect.left, e.clientY - rect.top);
            ctx.stroke();
        }

        function handleTouch(e) {
            e.preventDefault();
            const touch = e.touches[0];
            const mouseEvent = new MouseEvent(e.type === 'touchstart' ? 'mousedown' : 
                                            e.type === 'touchmove' ? 'mousemove' : 'mouseup', {
                clientX: touch.clientX,
                clientY: touch.clientY
            });
            e.target.dispatchEvent(mouseEvent);
        }

        function stopDrawing() {
            isDrawing = false;
        }

        function clearCanvas() {
            initializeCanvas();
        }

        function newPracticeLetter() {
            const randomIndex = Math.floor(Math.random() * alphabet.length);
            currentLetter = alphabet[randomIndex];
            const letter = practiceCase === 'upper' ? currentLetter.letter : currentLetter.letter.toLowerCase();
            document.getElementById('practiceLetterDisplay').textContent = letter;
            initializeCanvas();
        }

        function practiceSound() {
            alert('Ask an adult to help you practice this sound! Say it together 3 times.');
        }

        // Initialize on load
        initializeAlphabet();
        initializeVowels();
    </script>
</body>
</html>
